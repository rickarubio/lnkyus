<h1 id="site-title">Welcome to lnky.us!</h1>

<%= form_for @url do |f| %>
  <%= f.text_field :address %>
  <%= f.submit "Shorten URL" %>
<% end %>

<% if session[:url_id] %>
  <% @short = Url.find(session[:url_id]).short %>
  <p>Your short url is: <a href=<%= "lnky.us/#{@short}" %>><%= "lnky.us/#{@short}" %></a></p>
<% end %>

<% flash.each do |name, msg| %>
      <p class="notice"><%= msg %></div>
<% end %>
