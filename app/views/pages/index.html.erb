<h1 id="site-title">Welcome to lnky.us!</h1>

<%= form_for @url do |f| %>
  <%= f.text_field :address %>
  <%= f.submit "Shorten URL" %>
<% end %>

<% if session[:url_id] %>
  <% @url = Url.find(session[:url_id]) %>
  <p>Your short url is: <a href=<%= "/#{@url.short}" %>><%= "lnky.us/#{@url.short}" %></a></p>
  <p>The orginal url is: <a href=<%= @url.address %>><%= @url.address %></a></p>
<% end %>

<% flash.each do |name, msg| %>
      <p class="notice"><%= msg %></div>
<% end %>
